{
  "name": "picky-monorepo",
  "version": "1.0.0",
  "description": "Picky Cat Food Tracker - Mobile app and backend API",
  "private": true,
  "workspaces": [
    "mobile",
    "backend"
  ],
  "scripts": {
    "mobile": "cd mobile && npm start",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "mobile:web": "cd mobile && npm run web",
    "backend": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:setup": "cd backend && ./setup.sh",
    "install:all": "npm install && cd mobile && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules mobile/node_modules backend/node_modules",
    "dev": "echo 'Run mobile and backend in separate terminals:\\n  npm run mobile\\n  npm run backend'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akksi/picky.git"
  },
  "keywords": [
    "cat",
    "food",
    "tracker",
    "react-native",
    "expo",
    "nodejs",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {}
}

